@model Post
@using MVC.Models.Blog;
@using MVC.Views.Shared.Components.CategorySidebar
@{
    var categories = ViewBag.categories;
    Category? category = ViewBag.category as Category;
    var otherPosts = ViewBag.otherPosts as IQueryable<Post>;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/">Home</a></li>
        @if (category != null)
        {
            var parents = category.GetParents();
            if (parents != null)
            {
                foreach (var parent in parents)
                {
                    <li class="breadcrumb-item active" aria-current="page">
                        <a style="text-decoration: none;" asp-action="Index" asp-route-categoryslug="@parent.Slug">@parent.Title</a>
                    </li>
                }
            }
            <li class="breadcrumb-item active" aria-current="page">
                <a style="text-decoration: none;" asp-action="Index" asp-route-categoryslug="@category.Slug">@category.Title</a>
            </li>
        }
    </ol>
</nav>
<div class="detail-post">
    <h1>@Model.Title</h1>
    <div class="sapo">
        @Model.Description
    </div>
    <div>
        <i>Cập nhật: @Model.DateUpdated</i> / 
        Tác giả: <strong>@Model?.Author?.UserName</strong>
    </div>
    <hr />
    @Html.Raw(Model?.Content)
</div>



@section SideBar {
    @await Component.InvokeAsync("MVC.Views.Shared.Components.CategorySidebar.CategorySidebar",
    new CategorySidebar.CategorySidebarData
    {
        Categories = categories,
        Level = 0,
        CategorySlug = category?.Slug
    });

    <ul class="list-group">
        @foreach (var post in otherPosts)
        {
            <li class="list-group-item">
                <a asp-controller="ViewPost" asp-action="Details" asp-route-postslug="@post.Slug">
                    @post.Title
                </a>
            </li>
        }
    </ul>
}

