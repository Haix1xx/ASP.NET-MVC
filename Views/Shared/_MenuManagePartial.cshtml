@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService authorizationService

@{
    var result = await authorizationService.AuthorizeAsync(this.User, "ViewManageMenu");
}
@if (result.Succeeded)
{
    <div class="dropdown show">
        <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Manage
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" asp-area="Database" asp-controller="DbManage" asp-action="Index">Database</a>
            <a class="dropdown-item" asp-area="Contact" asp-controller="Contact" asp-action="Index">Contact Management</a>
            <a class="dropdown-item" asp-area="Identity" asp-controller="Role" asp-action="Index">Role</a>
            <a class="dropdown-item" asp-area="Identity" asp-controller="User" asp-action="Index">User</a>
            <a class="dropdown-item" asp-area="Blog" asp-controller="Category" asp-action="Index">Blog</a>
            <a class="dropdown-item" asp-area="Product" asp-controller="CategoryProduct" asp-action="Index">Category Product</a>
            <a class="dropdown-item" asp-area="Product" asp-controller="ProductManage" asp-action="Index">Product</a>
            <a class="dropdown-item" asp-area="Blog" asp-controller="Post" asp-action="Index">Post</a>
            <a target="_blank" class="dropdown-item" asp-area="Files" asp-controller="FileManage" asp-action="Index">File</a>
        </div>
    </div>
}
