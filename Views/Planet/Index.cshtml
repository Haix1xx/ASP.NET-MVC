@inject PlanetServices PlanetServices
@{
}
<div class="list-group">
    @foreach(var planet in PlanetServices.Planets)
    {
        <a class="list-group-item list-group-item-action" asp-controller="Planet" asp-action="Detail" asp-route-id="@planet.Id">@planet.Name (@planet.VNName)</a>
    }
</div>